<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpotActivity"
    android:orientation="vertical"
    android:background="#DCE6F6F8">

    <TextView
        android:id="@+id/navnTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navn"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp">

    </TextView>

    <RatingBar
        android:id="@+id/rating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        android:isIndicator="true"
        android:layout_marginLeft="20dp">

    </RatingBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surfeforhold: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

    </TextView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >


        <LinearLayout
            android:background="@drawable/farge1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="BÃ¸lger: "
                        android:textSize="15dp"
                        android:layout_marginRight="100dp"
                        >

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:src="@drawable/wave_clipart"
                                android:layout_marginRight="140dp">

                            </ImageView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/bolgeTekst1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sett inn"
                                android:textSize="15dp">

                            </TextView>

                            <TextView
                                android:id="@+id/bolgeTekst2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sett inn"
                                android:textSize="15dp">

                            </TextView>

                            <TextView
                                android:id="@+id/bolgeTekst3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sett inn"
                                android:textSize="15dp">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Vind: "
                        android:textSize="15dp"
                        android:layout_marginRight="100dp"
                        >

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:src="@drawable/wind_clipart"
                                android:layout_marginRight="150dp"
                                android:layout_marginBottom="10dp">

                            </ImageView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:id="@+id/vindTekst1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sett inn"
                                android:textSize="15dp">

                            </TextView>

                            <TextView
                                android:id="@+id/vindTekst2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sett inn"
                                android:textSize="15dp">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Temperatur: "
                        android:textSize="15dp"
                        android:layout_marginRight="100dp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:src="@drawable/temp_clipart"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="150dp"
                                android:layout_marginBottom="15dp">

                            </ImageView>


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tempTekst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sett inn"
                            android:textSize="15dp">

                        </TextView>

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beskrivelse: "
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/besTekst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sett inn"
                    android:textSize="15dp">

                </TextView>



            </LinearLayout>




        </LinearLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>