<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpotActivity"
    android:orientation="vertical"
    android:background="#DCE6F6F8">

    <TextView
        android:id="@+id/navnTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="Navn"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <RatingBar
        android:id="@+id/rating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleIndicator"
        android:numStars="5"
        android:stepSize="1"
        android:isIndicator="true"
        android:layout_marginLeft="20dp">

    </RatingBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surfeforhold: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

    </TextView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >


        <LinearLayout
            android:background="@drawable/farge1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">



                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:src="@drawable/wave_clipart"
                                android:layout_marginRight="120dp">

                            </ImageView>

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="100dp"
                                android:text="Bølger: "
                                android:textSize="15dp">

                            </TextView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fbolgeTekst1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bølgehøyde:"
                                    android:textSize="15dp"
                                    android:layout_marginRight="5dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/bolgeTekst1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sett inn"
                                    android:textSize="15dp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fbolgeTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bølgefart:"
                                    android:textSize="15dp"
                                    android:layout_marginRight="15dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/bolgeTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sett inn"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="7dp">

                                </TextView>



                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/fbolgeTekst3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Retning:"
                                    android:textSize="15dp"
                                    android:layout_marginRight="10dp">

                                </TextView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="22dp">

                                    <TextView
                                        android:id="@+id/bolgeTekst3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sett inn"
                                        android:textSize="15dp">

                                    </TextView>

                                    <ImageView
                                        android:id="@+id/retning"
                                        android:layout_width="match_parent"
                                        android:layout_height="24dp"
                                        app:srcCompat="@drawable/arrow" />

                                </LinearLayout>





                            </LinearLayout>




                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="120dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/wind_clipart">

                            </ImageView>

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="100dp"
                                android:text="Vind: "
                                android:textSize="15dp">

                            </TextView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fvindTekst1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vindfart: "
                                    android:textSize="15dp"
                                    android:layout_marginRight="10dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/vindTekst1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sett inn"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="16dp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fvindTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Retning: "
                                    android:textSize="15dp"
                                    android:layout_marginRight="10dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/vindTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sett inn"
                                    android:textSize="15dp"
                                    android:layout_marginLeft="18dp">

                                </TextView>

                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="213dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="150dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/temp_clipart">

                            </ImageView>

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="100dp"
                                android:text="Temperatur: "
                                android:textSize="15dp">

                            </TextView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tempTekst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textSize="30dp">

                            </TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"/>


                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beskrivelse: "
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/besTekst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sett inn"
                    android:textSize="15dp">

                </TextView>



            </LinearLayout>




        </LinearLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>