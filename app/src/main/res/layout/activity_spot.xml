<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpotActivity"
    android:orientation="vertical"
    android:background="#ffffffff">

    <TextView
        android:id="@+id/navnTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:text="Navn"
        android:textColor="@color/primary_dark"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bølgerating: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/primary_dark">
    </TextView>

    <RatingBar
        android:id="@+id/rating1"
        style="@style/CustomRatingBarStyle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1">

    </RatingBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surfeforhold: "
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/primary_dark">

    </TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:theme="@style/Spot"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="100dp"
                                android:text="Bølger: "
                                android:textSize="15dp"
                                tools:textStyle="bold">

                            </TextView>

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="60dp"
                                android:layout_marginRight="120dp"
                                android:src="@drawable/wave_clipart">

                            </ImageView>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fbolgeTekst1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="Bølgehøyde:"
                                    android:textSize="15dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/bolgeTekst1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sett inn"
                                    android:textSize="15dp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fbolgeTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:text="Bølgefart:"
                                    android:textSize="15dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/bolgeTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:text="Sett inn"
                                    android:textSize="15dp">

                                </TextView>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/fbolgeTekst3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:text="Retning:"
                                    android:textSize="15dp">

                                </TextView>


                                    <TextView
                                        android:id="@+id/bolgeTekst3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sett inn"
                                        android:layout_marginLeft="17dp"
                                        android:textSize="15dp">

                                    </TextView>

                                <ImageView
                                    android:id="@+id/retning"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/arrow_wind" />



                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="100dp"
                                android:text="Vind: "
                                android:textSize="15dp"
                                tools:textStyle="bold">

                            </TextView>

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="120dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/wind_clipart">

                            </ImageView>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fvindTekst1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="Vindfart: "
                                    android:textSize="15dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/vindTekst1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="Sett inn"
                                    android:textSize="15dp">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fvindTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="Retning: "
                                    android:textSize="15dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/vindTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="18dp"
                                    android:text="Sett inn"
                                    android:textSize="15dp">

                                </TextView>
                                <ImageView
                                    android:id="@+id/retningVind"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/arrow_wind" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="191dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="100dp"
                                android:text="Temperatur: "
                                android:textSize="15dp"
                                tools:textStyle="bold">

                            </TextView>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="120dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/temp_clipart">

                            </ImageView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tempTekst2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:text="Lufttemperatur: "
                                    android:textSize="15dp">

                                </TextView>

                                <TextView
                                    android:id="@+id/tempTekst"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0dp"
                                    android:text="0"
                                    android:textSize="15dp">

                                </TextView>

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beskrivelse: "
                    android:textSize="15dp"
                    tools:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/besTekst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sett inn"
                    android:textSize="15dp"
                    tools:textStyle="normal">

                </TextView>


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>



</LinearLayout>